// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore"
    }
  },
  {
    "context": "vim_operator == a || vim_operator == i || vim_operator == cs",
    "bindings": {
      "q": "vim::MiniQuotes",
      "b": "vim::MiniBrackets"
    }
  },
  {
    "context": "Dock && !Terminal && !Editor || VimControl && !menu || EmptyPane || SharedScreen || Pane && !Editor && !Terminal",
    // Everywhere except insert, terminal and Dock while writing
    "bindings": {
      "space w": "workspace::Save",
      "space W": "workspace::SaveAll",
      "space p": "command_palette::Toggle",
      "space q": "pane::CloseActiveItem",
      "space Q": "pane::CloseAllItems",
      "space s": "pane::SplitRight",
      "space v": "pane::SplitDown",
      "space l": "vim::GoToTab",
      "space h": "vim::GoToPreviousTab",
      "space o": "projects::OpenRecent",
      "space O": "workspace::Open",
      "space n": "workspace::NewWindow",
      "space r": ["editor::SpawnNearestTask", { "reveal": "no_focus" }]
    }
  },
  {
    "context": "Dock || VimControl && !menu || EmptyPane || SharedScreen || Pane && !Editor",
    // Everywhere except insert
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-t h": "workspace::ToggleLeftDock",
      "ctrl-t l": "workspace::ToggleRightDock",
      "ctrl-t j": "workspace::ToggleBottomDock",
      "ctrl-g a": ["task::Spawn", { "task_name": "Git Add Current File" }],
      "ctrl-g A": ["task::Spawn", { "task_name": "Git Add All Files" }],
      "ctrl-g c": ["task::Spawn", { "task_name": "Git Commit" }],
      "ctrl-g p": ["task::Spawn", { "task_name": "Git Push" }],
      "ctrl-g U": ["task::Spawn", { "task_name": "Git Unadd All" }],
      "ctrl-g o": ["task::Spawn", { "task_name": "Git Oops" }],
      "ctrl-G a": "git::Add",
      "ctrl-G c": "git::Commit"
    }
  },
  {
    "context": "Terminal || (BufferSearchBar > Editor)",
    "bindings": {
      "ctrl-space h": "pane::ActivatePreviousItem",
      "ctrl-space l": "pane::ActivateNextItem",
      "ctrl-q": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Dock && !AgentPanel && !Terminal && !DebugPanel",
    // Every panel that is on the left dock
    "bindings": {
      "ctrl-h": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Dock && AgentPanel",
    // Every panel that is on the right dock
    "bindings": {
      "ctrl-l": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile",
      "A": "project_panel::NewDirectory",
      "r": "project_panel::Rename",
      "d": "project_panel::Trash",
      "x": "project_panel::Cut",
      "c": "project_panel::Copy",
      "p": "project_panel::Paste",
      "l": "project_panel::OpenPermanent"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-t": "workspace::NewTerminal",
      "ctrl-q": "pane::CloseActiveItem",
      "ctrl-j": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "DebugPanel",
    "bindings": {
      "ctrl-j": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "GitDiff > Editor",
    "bindings": {
      "ctrl-g a": "git::StageAndNext",
      "ctrl-g A": "git::UnstageAndNext",
      "ctrl-g c": "git::Commit",
      "ctrl-g r": "git::Restore"
    }
  },
  {
    "context": "GitPanel && CommitEditor",
    "bindings": {
      "ctrl-[": "git::Cancel"
    }
  },
  {
    "context": "GitCommit > Editor",
    "bindings": {
      "ctrl-g c": "git::Commit"
    }
  },
  {
    "context": "VimControl && !menu",
    // Normal & visual mode.
    "bindings": {
      "g n": "editor::SelectNext"
    }
  },
  {
    "context": "vim_operator == c",
    "bindings": {
      "a": "editor::ToggleCodeActions" // Zed specific
    }
  },
  {
    "context": "Editor || menu",
    "bindings": {
      "ctrl-j": "menu::SelectNext",
      "ctrl-k": "menu::SelectPrevious",
      "tab": "menu::SelectNext",
      "shift-tab": "menu::SelectPrevious",
      "ctrl-[": "menu::Cancel"
    }
  },
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "ctrl-j": "editor::ContextMenuNext",
      "ctrl-k": "editor::ContextMenuPrevious",
      "tab": "editor::ContextMenuNext",
      "shift-tab": "editor::ContextMenuPrevious"
    }
  },
  {
    "context": "BufferSearchBar",
    "bindings": {
      "ctrl-[": "buffer_search::Dismiss",
      "escape": "buffer_search::Dismiss"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-space c": "editor::ShowCompletions"
    }
  }
]
