[core]
	editor = zed --wait
	autocrlf = true
[user]
	username = rmdth
	email = 166089650+rmdth@users.noreply.github.com
	name = ram
	signingkey = ~/.ssh/id_ed25519.pub
[gpg]
	format = ssh
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
[alias]
	s = status
	co = checkout
	cob = checkout -b
	br = branch
	last = log -1 HEAD
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	unadd = reset HEAD --
	m = merge
	pr = pull --rebase
